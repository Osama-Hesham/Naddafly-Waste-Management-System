<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CollectorProfile">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp"

            >

            <TextView

                android:id="@+id/CollectorProfileTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textColor="@color/darkGreen"



                />

            <ImageView
                android:id="@+id/CollectorProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic" />

            <TextView
                android:id="@+id/CollectorUserNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ahmed Hassan"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/darkGreen"/>

            <TextView
                android:id="@+id/CollectorEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AhmedHassan@gmail.com"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textColor="@color/darkGreen"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/green_container"
                android:layout_margin="18dp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_text_custom">

                        <ImageView
                            android:id="@+id/CollectorimageView5"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_launcher_foreground" />

                        <TextView
                            android:id="@+id/CollectorCoinsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:text="22" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/CollectorCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Garbage Collected"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/CollectorlogoutBtn"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Logout"
                android:layout_margin="18dp"
                android:textStyle="bold"
                android:backgroundTint="#9E2525"/>


        </LinearLayout>



</FrameLayout>